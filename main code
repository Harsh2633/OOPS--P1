class Customers
{
public:
    string name, gender, address;
    int age, contact;
    static int cusID;
    char all[999];

    void getdetails()
    {
        ofstream out("old.customers.txt", ios::app);
        {
            cout << "------------------------------- .CUSTOMER DETAILS. ---------------------------------" << endl<<endl;
            cout << " Enter Customer ID: ";
            cin >> cusID;
            cout << " Enter Customer Name: ";
            cin >> name;
            cout << " Enter Customer Age: ";
            cin >> age;
            cout << " Enter Customer Contact: ";
            cin >> contact;
            cout << " Enter Customer Address: ";
            cin >> address;
            cout << " Enter Customer Gender: ";
            cin >> gender;
        }
        out << "\nCustomer ID: " << cusID << "\nName: " << name << "\nage: " << age << "\ncontact: " << contact << "\naddress: " << address << " \ngender: " << gender << endl;
        out.close();
        cout << " \nSAVED \n NOTE: We save your details record for future purposes\n"<< endl;
    }
    void showDetails()
    {
        ifstream in("old.customers.txt");
        if (!in)
        {
            cout << "File Error!" << endl;
        }
        else
        {
            while (in.getline(all, 999))
            {
                cout << all << endl;
            }
            in.close(); // Changed from "inf.close();" to "in.close();"
        }
    }
};

int Customers::cusID;
class Cabs
{
public:
    int cabChoice;
    int kilometers;
    float cabCost;
    static float lastcabCost;

    void cabDetails()
    {
        cout << "----------------------------------------------------------------------------------" << endl;
        cout << "****************************** || CAB DETAILS || *********************************" << endl;
        cout << "----------------------------------------------------------------------------------" << endl<< endl;

        cout << "------------------------------- .SELECTION MENU. ---------------------------------" << endl<<endl;;

        cout << "- We collaborated with fastest, safest, and smartest cab service around the country." << endl<< endl;

        cout << "---------------------------------------------" << endl;
        cout << "|| 1. Rent a Standard Cabs - Rs.15 for 1Km ||" << endl;
        cout << "|| 2. Rent a Luxury Cabs   - Rs.25 for 1Km ||" << endl;
        cout << "---------------------------------------------" << endl;

        cout << "- To calculate the cost for your journey:" << endl<<endl;
        cout << "- Enter which kind of cab you need      : ";
        cin >> cabChoice;
        cout << "- Enter kilometers you have to travel   : ";
        cin >> kilometers;

        int hireCab;
        if (cabChoice == 1)
        {
            cabCost = kilometers * 15;
            cout<<endl;
            cout << "\n Your tour cost " << cabCost << "ruppes for a Standard Cab" << endl<<endl;
            cout << "Press 1 to hire cab: or ";
            cout << "Press 2 to select another cab";
            cin >> hireCab;

           

            if (hireCab == 1)
            {
                lastcabCost = cabCost;
                cout << " You have successfully hired Standard Cab" << endl;
                cout << " Goto Menu and take the receipt" << endl;
                system("cls");
                menu();
            }
            else if (hireCab)
            {
                system("cls");
                menu();
            }
            else
            {
                cout << "Invalid Input! Redirecting to previous menu \nPlease";
                Sleep(999);
                system("cls");
                menu();
            }
        }
        else if (cabChoice == 2)
        {

            cabCost = kilometers * 25;
            cout << " Your tour cost " << cabCost << "rupees for a Luxury Cab" << endl;
            cout << " Press 1 to Hire Cab: or ";
            cout << " Press 2 to Select Another cab";
            cin >> hireCab;

           

            if (hireCab == 2)
            {
                lastcabCost = cabCost;
                cout << " You have successfully hired Luxury Cab" << endl;
                cout << " Goto Menu and take the receipt" << endl;
                system("cls");
                menu();
            }
            else if (hireCab)
            {
                system("cls");
                menu();
            }
            else
            {
                cout << "Invalid Input! Redirecting to previous menu \nPlease Wait";
                Sleep(1100);
                system("cls");
                menu();
            }
        }
        else
        {
            system("cls");
            menu();
        }
    }
};

float Cabs::lastcabCost;

